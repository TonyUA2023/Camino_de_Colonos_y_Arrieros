---
const {datosLanding}= Astro.props;
---
<section class="bg-gray-200">
    <div class="lg:flex block mx-20 m-auto pt-20 py-20  text-black">
        
        <div class="w-[6    00px] self-center animation-left-scroll">
            <img 
                src="../../public/img/historia/historia.png" 
                alt=""
                style="mask-image: linear-gradient(black 60%, transparent);"
            >
        </div>

        <div class="lg:w-[900px] text-end ">
            <h2 class="text-4xl font-extrabold animation-right-scroll">
                HISTORIA
            </h2>

            <p class="my-5 text-xl tracking-widest leading-loose animation-right-scroll">
                {datosLanding.texto_historia}
            </p>
        </div>
    </div>
</section>

<style>
    .animation-right-scroll-delay{
        animation: animation-right 1s ease forwards;
    }
</style>